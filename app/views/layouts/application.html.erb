<!DOCTYPE html>
<html>
  <head>
    <title>RailsPrductReviewer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="container">
    <% if user_signed_in? %>
      <h5 class="text-right"><%= link_to "Logout", destroy_user_session_path, :method => :delete %></h5>
    <% end %>

    <%= flash[:alert] %>
    <%= flash[:notice] %>
    <%= yield %>
  </body>
</html>
